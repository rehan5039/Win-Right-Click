Windows Registry Editor Version 5.00

; Complete File Hash Verification Menu (MD5, SHA1, SHA256, SHA512)

[HKEY_CLASSES_ROOT\*\shell\FileHashMenu]
"MUIVerb"="Get File Hash"
"SubCommands"="hash_md5;hash_sha1;hash_sha256;hash_sha512;hash_all"
"Icon"="shell32.dll,-16711"

; MD5
[HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\hash_md5]
@="MD5 Hash"
"Icon"="shell32.dll,-16711"

[HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\hash_md5\command]
@="powershell -NoProfile -Command \"Add-Type -AssemblyName PresentationFramework; $hash=(Get-FileHash -LiteralPath '%1' -Algorithm MD5).Hash; Set-Clipboard $hash; [System.Windows.MessageBox]::Show('MD5: ' + $hash + \"`n`nCopied to clipboard!\",'MD5 Hash','OK','Information')\""

